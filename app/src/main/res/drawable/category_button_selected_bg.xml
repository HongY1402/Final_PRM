<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/holo_red_dark"/> <!-- Đảm bảo màu trắng -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Viền màu xám đậm với độ dày 2dp -->
        </shape>
    </item>
</selector>
